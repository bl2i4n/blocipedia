<div class="form-group">
  <h3>Add Collaborators</h3>
  <table>
    <tr><th>User Name</th><th>User Email</th><th>Collaborator?</th></tr>
  <% @users.each do |user| %>
    <% if user.id != @wiki.user_id %> <!-- does not display wiki author -->
      <tr><td><%= user.name %></td><td><%= user.email %><td>
      <% if is_collab?(user.id, @collaborators) %>
        <%= link_to "Remove", wiki_collaborators_path(@wiki.id, @wiki.collaborators.find_by_user_id(user.id).id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to "Add", wiki_collaborators_path(@wiki.id, user_id: user.id), method: :post, class: 'btn btn-success' %>
      <% end %>
    </td></tr>
    <% end %> <!-- end of if statement -->
    <% end %> <!-- end of @users.each looop -->
  </table>
</div>
